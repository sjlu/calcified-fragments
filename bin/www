#!/usr/bin/env node
var app = require('../app');
app.set('port', process.env.PORT || 3000);

// warm up the cache
// then run the web app
var bungieLookup = require('../lib/bungie_lookup');
bungieLookup.getCardDetails()
  .then(function() {
    app.listen(app.get('port'));
  })
  .catch(function(err) {
    console.error(err.stack || err)
  })

